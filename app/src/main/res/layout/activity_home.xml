<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context="comp3350.srsys.presentation.HomeActivity">

    <TextView
        android:id="@+id/textTitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="50dp"
        android:textColor="@color/colorPrimary"
        android:text="SuperSet" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignWithParentIfMissing="false"
        android:layout_centerInParent="true"
        android:orientation="vertical">


        <Button
            android:id="@+id/buttonStartWorkout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="buttonStartWorkoutOnClick"
            android:text="@string/startWorkout" />

        <Button
            android:id="@+id/buttonUploadProgress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:onClick="buttonUploadProgressOnClick"
            android:text="Upload Progress" />

        <Button
            android:id="@+id/buttonMyRoutines"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:onClick="buttonMyRoutinesOnClick"
            android:text="My Routines" />

        <Button
            android:id="@+id/buttonGraph"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:onClick="buttonGraphOnClick"
            android:text="@string/graph" />

        <Button
            android:id="@+id/buttonStatistics"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:onClick="buttonStatisticsOnClick"
            android:text="Statistics" />

    </LinearLayout>



</RelativeLayout>
